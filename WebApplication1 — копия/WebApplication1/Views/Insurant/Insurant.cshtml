@model IEnumerable<WebApplication1.Models.Agency.Insurant>

@{
    ViewBag.Title = "Insurant";
}

<h2>Страхователь</h2>

@if (User.IsInRole("Admin") || User.IsInRole("Agent"))
{
    <p>
        @Html.ActionLink("Создать", "CreateAgent")
    </p>
}

<table class="table">
    <tr>
        <th>
            Название/ФИО
        </th>
        <th>
            Тип
        </th>
        <th>
            Адрес
        </th>
        <th>
            Телефон
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @item.Type1.title
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phone)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "EditInsurant", new { id=item.id })
        </td>
    </tr>
}

</table>
